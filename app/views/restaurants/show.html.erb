<p>
  <strong>Name</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Description</strong>
  <%= @restaurant.description %>
</p>
<h2>Reviews</h2>
<% @restaurant.reviews.each do |review| %>
<p>
  <strong>Reviewer:</strong>
  <%= review.reviewer %>
</p>
<p>
  <strong>Review:</strong>
  <%= review.body %>
</p>
<% end %>
<h2>Add a review:</h2>
<%= form_with(model: [ @restaurant, @restaurant.reviews.build ],
local: true) do |form| %>
  <p>
    <%= form.label :reviewer %><br>
    <%= form.text_field :reviewer %><br>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_field :body %><br>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', restaurants_path %>
